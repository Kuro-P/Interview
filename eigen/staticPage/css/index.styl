@charset "UTF-8"

ul li
    list-style none
    margin 0

a
    text-decoration none

.container
    font-size 14px
    letter-spacing 1px
    padding-bottom 100px
    min-width 1200px
    .banner-container
        background-image url('../images/banner-bg.png')
        background-color rgba(0,0,0,.5)
        background-size cover
        background-repeat no-repeat
        min-height 800px
        position relative
        color #Fff
        &:before
            content " "
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background-color rgba(59,61,64,.5)
            z-index 0
        /*导航部分*/
        .nav
            box-sizing border-box
            padding 53px 112px 0
            height 100px
            position relative
            font-size 11px
            font-weight bolder
            a, span
                color #fff
            div.lang
                float left
                width 7em
                a
                    opacity .5
                    &:hover
                        opacity .8
                a.checked
                    opacity 1

            ul.nav-content
                width 400px
                margin 0 auto
                li
                    float left
                    width 100px
                    text-align center
                    a
                        display inline-block
                        line-height 1.5
                    a:active,a:link
                        outline none
                    a:hover
                        border-bottom 1px solid #fff
            ul.contact
                float right
                li
                    width 50px
                    float left
                    text-align center
                    a
                        -webkit-filter brightness(80%)
                        filter brightness(80%)
                        &:hover
                            -webkit-filter brightness(100%)
                            filter brightness(100%)
        /*banner中间部分*/
        .carousel
            position relative
            height 700px
            .arrow
                cursor pointer
                position absolute
                top 350px
                transform translateY(-50%)
                width 72px
                height @width
                border 1px solid #fff
                border-radius 50%
                background-repeat no-repeat
                background-position center
                transition all .3s
                &:hover
                    background-color rgba(255,255,255,.3)
            .left-arrow
                background-image url('../images/Left-Arrow.png')
                left 110px
            .right-arrow
                background-image url('../images/Right-Arrow.png')
                right 110px
            .context
                position absolute
                top 350px
                transform translateY(-50%)
                width 100%
                height 280px
                text-align center
                img
                    margin-bottom 20px
                p:nth-of-type(3)
                    margin-top 20px
                .context-title
                    font-size 52px
                    font-weight bolder
                    line-height 1.2
                .context-detail
                    font-size 20px
                    line-height 1.3
                    color rgba(255,255,255,.7)
                    letter-spacing 0
    /*输入框部分*/
    .invest-container
        height 165px
        background #3b3d40
        form
            height 100%
            line-height 165px
            input[type='email'],select
                color #fff
                height 45px
                background-color #585a5c
                outline 0
                border 0
                border-radius 5px
            input[type='email']
                width 250px
                box-sizing border-box
                padding-left 1em
                margin-left 110px
                &::-webkit-input-placeholder
                    color #fff
                &::-ms-input-placeholder
                    color #fff
                &::-moz-placeholder
                    color #fff
            select
                box-sizing border-box
                padding 0 1em
                margin-left 15px
                width 525px
                appearance none
                -moz-appearance none
                -webkit-appearance none
                background-image url('../images/Down-Arrow.png')
                background-repeat no-repeat
                background-position right center
                background-origin content-box
                option
                    height 40px
            input[type='submit']
                width 165px
                height 45px
                margin-left 23px
                background #2e71f2
                color #fff
                text-align center
                font-size 12px
                outline none
                border none
                border-radius (@height/2)
    .detail-container
        .main
            margin 100px 0 65px
            height 320px
            text-align center
            .main-title
                color #3b3d40
                font-size 52px
                font-weight bolder
                line-height 1.8
            .main-detail
                font-size 20px
                color #656b6f
                line-height 1.5
                letter-spacing 0
        .detail
            display -webkit-flex
            display flex
            .detail-item
                flex 1
                text-align center
                margin 0 30px
                font-size 11px
                .item-title
                    font-weight bolder
                    color #3b3d40
                    margin 10px 0
                .item-desc
                    font-size 14px
                    letter-spacing 0
                    color #656b6f
                    line-height 1.2